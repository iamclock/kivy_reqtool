<MyGridLayout>
    
    name: name
    surname: surname
    color: color
    
    ScrollView:
        size: root.width, root.height
        BoxLayout:
            spacing: 20
            orientation: "vertical"
            GridLayout:
                cols: 2
                pos_hint: {"center_x": .5}
                size_hint: .5, .1
                
                Label:
                    text: "Name"
